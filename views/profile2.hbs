<html>
	<head>
		<title>RMS</title>
		<link rel="stylesheet" href="style.css">
		<meta name="viewport" content="width=device-width,initial-scale=1.0">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
	</head>
	<body>
       
	<header class="sticky-top">
			<section class="header">
				<div class="container" style ="text-align: center;">
					<H1>Result Management System</H1>>
				</div>
			</section>
		</header>
		<section class="back">
            <div class="container" align=center>
                <br>
                <h3>Welcome, {{user.name}}</h3>
                <div class="row shadow">
                     <h3><br>Student Details</h3>
                     <hr class="style-one"><br>
                     <br>
                     <table class="table table-striped">
                         <tr align=center>
                            <th>Name</th>
                            <th>Roll Number</th>
							<th>Date of Birth</th>
							<th>Result</th>
                            <th></th>   
                         </tr>
                         {{#each row}}
                          <tr align=center>
                             <!--<td><img src="{{this.img}}" style="width: 200;"></td>-->
                             <td style="vertical-align: middle;font-size: 30px;">{{this.name}}</td>
							 <td style="vertical-align: middle;font-size: 30px;">{{this.rollno}}</td>
							 <td style="vertical-align: middle;font-size: 30px;">{{this.dob}}</td>
							 <td style="vertical-align: middle;font-size: 30px;">{{this.score}}/100</td>
                             <!--<td style="vertical-align: middle;font-size: 30px;"><btn class="btn btn-success" onclick="document.location ='{{this.link}}'">Continue</btn></td>-->
                         </tr>
                         {{/each}}
                     </table>
                </div> <br>
                <btn class="btn btn-primary" onclick="document.getElementById('addform').style.display='block';">Add Record</btn>
                <btn class="btn btn-primary" onclick="document.getElementById('addform').style.display='block';">EditRecord</btn>	
                <btn class="btn btn-primary" onclick="document.getElementById('delform').style.display='block';">Delete Record</btn>
                <a href="/auth/logout" class="btn btn-danger">Logout</a>		
            </div>
            <br>
            <div id="addform" style="display: none;">
                <form class="shadow row g-3 forml"  action="/auth/editstudent" method="POST">
                                <h1 style="color:royalblue"><i class="fa fa-pencil" style="color:royalblue"></i> Add/Edit Record</h1>
                                <div class="col-12">
                                    <input type="text" name="name" class="form-control name" id="inputAddress" placeholder="Name" required>
                                </div>
                                <div class="col-12">
                                    <input type="email" name="email" class="form-control email" id="inputAddress" placeholder="Email" required>
                                </div>
                                <div class="col-12">
                                    <input type="text" name="rollno" class="form-control rollno" id="inputAddress" placeholder="Roll Number" required>
                                </div>
                                <div class="col-12">
                                    <input type="text" name="dob" class="form-control dob" id="inputAddress" placeholder="Date of Birth" required>
                                </div>
                                 <div class="col-12">
                                    <input type="text" name="score" class="form-control score" id="inputAddress" placeholder="Score" required>
                                </div>		                               					
                                {{#if message}}
                                    <h4 class="alert alert-danger mt-4">{{message}}</h4>
                                {{/if}}
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary submit">Submit</button>
                                </div>
                            </form>
            </div>
            <div id="delform" style="display: none;">
                <form class="shadow row g-3 forml"  action="/auth/deletestudent" method="POST">
                                <h1 style="color:royalblue"><i class="fa fa-pencil" style="color:royalblue"></i> Delete Record</h1>
                                <div class="col-12">
                                    <input type="text" name="name" class="form-control name" id="inputAddress" placeholder="Name" required>
                                </div>
                                <div class="col-12">
                                    <input type="email" name="email" class="form-control email" id="inputAddress" placeholder="Email" required>
                                </div>                               					
                                {{#if message}}
                                    <h4 class="alert alert-danger mt-4">{{message}}</h4>
                                {{/if}}
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary submit">Submit</button>
                                </div>
                            </form>
            </div>
            </section>
            <section class="mid">
			<div class="container" align=center>
			</div>
            <div class="cfx">
         </div>

			
		</section>
        	</body>
</html>
