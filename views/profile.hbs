<html>
	<head>
		<title>RMS</title>
		<link rel="stylesheet" href="style.css">
		<meta name="viewport" content="width=device-width,initial-scale=1.0">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
	</head>
	<body>
       
	<header class="sticky-top">
			<section class="header">
				<div class="container" style ="text-align: center;">
					<H1>Result Management System</H1>>
				</div>
			</section>
		</header>
		<section class="back">
            <div class="container" align=center>
                <br>
                <h3>Welcome, {{user.name}}</h3>
                <div class="row shadow">
                     <h3><br>Your Details:</h3>
                    <br><br><br>
                     <table class="table table-striped">
                         {{#each row}}
                          <tr align=center>
							<td style="vertical-align: middle;font-size: 30px;">Rollno:</td>
                             <td style="vertical-align: middle;font-size: 30px;">{{this.rollno}}</td></tr>
							 <br>
							 <tr align=center>
								 <td style="vertical-align: middle;font-size: 30px;">DOB   :</td>
							 <td style="vertical-align: middle;font-size: 30px;">{{this.dob}}</td>
							 <br></tr>
							 <tr align=center>
								 <td style="vertical-align: middle;font-size: 30px;">Score :</td>
							 <td style="vertical-align: middle;font-size: 30px;">{{this.score}}/100</td>
							 <br></tr>
							 <tr align=center>
								 <td style="vertical-align: middle;font-size: 30px;">Email:</td>
							 <td style="vertical-align: middle;font-size: 30px;">{{this.email}}</td>
                            
                         </tr>
                         {{/each}}
                     </table>
                </div> <br>
                <a href="/auth/logout" class="btn btn-danger">Logout</a>		
            </div>
            </section>
		<section class="mid">
			<div class="container" align=center>
			</div>
			<div class="container">

	
					<div class="row footer">
						<p>Sharvansh Shukla 2019CSC1016</p>
						<hr>
				
				</div>
			</div>
		</section>

	</body>
</html>
