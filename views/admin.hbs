<html>
	<head>
		<title>RMS</title>
		<link rel="stylesheet" href="style.css">
		<meta name="viewport" content="width=device-width,initial-scale=1.0">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
	</head>
	<body>
       
	<header class="sticky-top">
			<section class="header">
				<div class="container" style ="text-align: center;">
					<H1>Result Management System</H1>>
				</div>
			</section>
		</header>
		<section class="back">
            <div class="container" align=center>
                <br>
                <h3>Welcome, {{user.name}}</h3>
                <div class="row shadow">
                     <h3><br>Your Kingdom:</h3>
                </div>
                </div>
            <div class="container" align=center>
                <btn class="btn btn-primary" onclick="document.getElementById('addform1').style.display='block';">Teacher Register</btn>	
                <btn class="btn btn-primary" onclick="document.getElementById('addform2').style.display='block';">Student Register</btn>
                <a href="/auth/logout" class="btn btn-danger">Logout</a>		
            </div>

            <div id="addform1" style="display: none;">
                <form class="shadow row g-3 forml"  action="/auth/register2" method="POST">
                                <h1 style="color:white"><i class="fa fa-pencil" style="color:white"></i> Add Teacher Record</h1>
                                <div class="col-12">
                                    <input type="text" name="name" class="form-control name" id="inputAddress" placeholder="Name">
                                </div>
                                <div class="col-12">
                                    <input type="email" name="email" class="form-control email" id="inputAddress" placeholder="Email">
                                </div>
                                <div class="col-12">
                                    <input type="password" name="password" class="form-control password" id="inputAddress" placeholder="Password">
                                </div>
                                <div class="col-12">
                                    <input type="password" name="c_password" class="form-control password" id="inputAddress" placeholder="Confirm Password">
                                </div>	                               					
                                {{#if message}}
                                    <h4 class="alert alert-danger mt-4">{{message}}</h4>
                                {{/if}}
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary submit">Submit</button>
                                </div>
                            </form>
            </div>
             <div id="addform2" style="display: none;">
                <form class="shadow row g-3 forml"  action="/auth/register" method="POST">
                                <h1 style="color:royalblue"><i class="fa fa-pencil" style="color:royalblue"></i> Add Student Record</h1>
                                 <div class="col-12">
                                    <input type="text" name="name" class="form-control name" id="inputAddress" placeholder="Name">
                                </div>
                                <div class="col-12">
                                    <input type="email" name="email" class="form-control email" id="inputAddress" placeholder="Email">
                                </div>
                                <div class="col-12">
                                    <input type="password" name="password" class="form-control password" id="inputAddress" placeholder="Password">
                                </div>
                                <div class="col-12">
                                    <input type="password" name="c_password" class="form-control password" id="inputAddress" placeholder="Confirm Password">
                                </div>
                                <div class="col-12">
                                    <input type="text" name="rollno" class="form-control rollno" id="inputAddress" placeholder="Roll Number">
                                </div>
                                <div class="col-12">
                                    <input type="text" name="dob" class="form-control dob" id="inputAddress" placeholder="Date of Birth">
                                </div>		                          					
                                {{#if message}}
                                    <h4 class="alert alert-danger mt-4">{{message}}</h4>
                                {{/if}}
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary submit">Submit</button>
                                </div>
                            </form>
            </div>
            </section>
		<section class="mid">
			<div class="container" align=center>
			</div>
			<div class="container">

	
					
			</div>
		</section>
	</body>
</html>
